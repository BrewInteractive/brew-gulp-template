{
    "browserSyncOptions": {
        "server": {
            "baseDir": "./dist"
        }
    },
    "source": {
        "path": "./app/",
        "js-path": "./app/scripts",
        "vendor-css-path": "./app/css",
        "sass-path": "./app/sass",
        "images-path": "./app/images",
        "fonts-path": "./app/fonts",
        "vendor-css-file": "./app/css/vendor.css",
        "sass-file": "./app/sass/main.scss",
        "vendor-scripts": [
            "node_modules/zepto/dist/zepto.min.js"
        ],
        "bundle-scripts": [
            "app/scripts/main.js"
        ]
    },
    "dist": {
        "path": "./dist/",
        "js-path": "assets",
        "css-path": "assets",
        "images-path": "assets/images",
        "fonts-path": "assets/fonts",
        "vendor-css-name": "vendor.min.css",
        "vendor-js-name": "vendor.min.js",
        "bundle-css-name": "bundle.min.css",
        "bundle-js-name": "bundle.min.js"
    }
}